# ============================================================================
# Dockerfile for Realtime Interview Avatar with MuseTalk Real-time
# NVIDIA GPU + mmpose/mmcv support (Linux only)
# ============================================================================

FROM nvidia/cuda:12.1.0-cudnn8-devel-ubuntu22.04

# Environment variables
ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    NVIDIA_VISIBLE_DEVICES=all \
    NVIDIA_DRIVER_CAPABILITIES=compute,utility,video \
    CUDA_VISIBLE_DEVICES=0

# System packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Python 3.10
    python3.10 \
    python3.10-dev \
    python3.10-venv \
    python3-pip \
    # Build tools
    build-essential \
    cmake \
    ninja-build \
    git \
    wget \
    curl \
    unzip \
    # FFmpeg for video processing
    ffmpeg \
    # OpenCV dependencies
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgl1-mesa-glx \
    libglib2.0-0 \
    libgomp1 \
    # Audio processing
    libsndfile1 \
    libportaudio2 \
    portaudio19-dev \
    # Networking
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.10 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/pip pip /usr/bin/pip3 1

# Upgrade pip
RUN pip install --upgrade pip setuptools wheel

# Working directory
WORKDIR /app

# ============================================================================
# PyTorch + CUDA 12.1
# ============================================================================
RUN pip install torch==2.4.0 torchvision==0.19.0 torchaudio==2.4.0 \
    --index-url https://download.pytorch.org/whl/cu121

# ============================================================================
# mmcv + mmpose + mmdet (Real-time MuseTalk requirements)
# ============================================================================
RUN pip install openmim && \
    mim install mmengine && \
    mim install "mmcv>=2.0.0" && \
    mim install "mmdet>=3.0.0" && \
    mim install "mmpose>=1.0.0"

# ============================================================================
# MuseTalk dependencies
# ============================================================================
RUN pip install \
    # Deep learning
    diffusers>=0.27.0 \
    transformers>=4.36.0 \
    accelerate>=0.25.0 \
    # Audio processing
    librosa>=0.10.0 \
    soundfile>=0.12.0 \
    # Image processing
    opencv-python>=4.8.0 \
    Pillow>=10.0.0 \
    # Configuration
    omegaconf>=2.3.0 \
    einops>=0.7.0 \
    # Utilities
    tqdm>=4.66.0 \
    numpy>=1.24.0 \
    scipy>=1.11.0

# ============================================================================
# STT/LLM/TTS dependencies
# ============================================================================
RUN pip install \
    # STT - Deepgram
    deepgram-sdk>=3.0.0 \
    # LLM - OpenAI
    openai>=1.0.0 \
    # TTS - ElevenLabs
    elevenlabs>=1.0.0 \
    # TTS - Edge TTS (free alternative)
    edge-tts>=6.1.0 \
    # Web framework
    fastapi>=0.109.0 \
    uvicorn[standard]>=0.25.0 \
    websockets>=12.0 \
    python-multipart>=0.0.6 \
    # Redis for session management
    redis>=5.0.0 \
    aioredis>=2.0.0 \
    # Utilities
    pydantic>=2.0.0 \
    pydantic-settings>=2.0.0 \
    python-dotenv>=1.0.0 \
    loguru>=0.7.0 \
    aiofiles>=23.0.0 \
    httpx>=0.26.0 \
    PyYAML>=6.0

# ============================================================================
# Pipecat (optional, for advanced pipeline)
# ============================================================================
RUN pip install pipecat-ai || echo "Pipecat installation skipped"

# ============================================================================
# Copy application code
# ============================================================================
COPY . /app

# ============================================================================
# Copy MuseTalk code
# ============================================================================
COPY ../MuseTalk /app/musetalk_src

# ============================================================================
# Download models (if not mounted)
# ============================================================================
RUN mkdir -p /app/models/musetalk /app/models/whisper

# Environment for application
ENV PYTHONPATH=/app:/app/musetalk_src \
    MODELS_DIR=/app/models \
    APP_HOME=/app

# Create directories
RUN mkdir -p /app/data /app/logs /app/uploads /app/temp /app/results

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Default command
CMD ["python", "-m", "uvicorn", "src.server.main:app", "--host", "0.0.0.0", "--port", "8000"]
